---
// Import necessary components
import SocialIcons from '../components/SocialIcons.astro';
import Title from '../components/atoms/Title.astro';
---

<!-- Trigger button to open modal -->
<button id="openModalBtn3" class="open-modal-btn">Video</button>

<!-- Modal structure -->
<div id="videoModal" class="modal z-50">
	<div class="modal-content">
		<!-- Close button for the modal -->
		<span id="closeModalBtn3" class="close">&times;</span>

		<!-- Your about section -->
    <slot />
		<section id="about" class="about">
			<div class="about__container">
				<div class="about__content">
					<Title margin="1rem" contenido="Video" />
					<p class="about__text">
						
					</p>
					<!-- <SocialIcons width="25" height="25" /> -->
				</div>
			</div>
		</section>
	</div>
</div>
<script is:inline>
	// Get modal element
	const vmodal = document.getElementById('videoModal');
	// Get open modal button
	const openModalBtn3 = document.getElementById('openModalBtn3');
	// Get close button
	const closeModalBtn3 = document.getElementById('closeModalBtn3');

	// Event listener to open modal
	openModalBtn3.addEventListener('click', function () {
		vmodal.style.display = 'block';
	});

	// Event listener to close modal
	closeModalBtn3.addEventListener('click', function () {
		vmodal.style.display = 'none';
	});

	// Close modal when clicking outside of modal content
